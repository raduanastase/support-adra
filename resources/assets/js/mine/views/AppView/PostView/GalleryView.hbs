<ul class="orbit-container">
    <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
    <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    {{#each images}}
        {{#unless is_private}}
            <li class="{{sif is_cover_image 'is-active' ''}} orbit-slide">
                <img class="orbit-image" src="{{path}}">
            </li>
        {{/unless}}
    {{/each}}
</ul>
<nav class="orbit-bullets">
    {{#each images}}
        {{#unless is_private}}
            <button class="{{sif is_cover_image 'is-active' ''}}" data-slide="{{id}}"></button>
        {{/unless}}
    {{/each}}
</nav>